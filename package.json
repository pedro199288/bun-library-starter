{
  "name": "bun-library-starter",
  "version": "0.1.2",
  "description": "A starter project for creating library with bun",
  "author": "Pedro Monteagudo (https://github.com/pedro199288)",
  "main": "dist/index.js",
  "scripts": {
    "start": "bun src/index.ts",
    "dev": "bun --watch src/index.ts",
    "build": "bun build src/revelio/index.ts --outdir=dist && bun run build:declaration",
    "build:declaration": "tsc --emitDeclarationOnly --project tsconfig.types.json",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "format": "prettier --write 'src/**/*.{ts,tsx,json}'",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "release": "bun run scripts/version-update.ts"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/bun": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "prettier": "^3.1.1",
    "typescript": "5.3.2"
  },
  "files": [
    "dist"
  ]
}
